<resources>
    <!-- Base application theme. -->
    <style name="Theme.ProjectSFinal" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/lightThemeColor</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="defaultThemeBackground">@color/lightThemeColor</item>
        <item name="defaultLayoutBackground">@color/lightLayoutColor</item>
        <item name="defaultTextColor">@color/darkTextColor</item>
        <item name="defaultIconColor">@color/darkIconColor</item>
        <item name="defaultButtonColor">@color/lightButtonColor</item>
        <item name="defaultSliderBackground">@color/lightSliderColor</item>
        <item name="defaultDividerColor">@color/lightDividerColor</item>
    </style>

    <style name="buttonTheme">
        <item name="colorPrimary">@color/lightButtonColor</item>
    </style>

    <style name="balanceButtonTheme">
        <item name="colorPrimary">@color/lightLayoutColor</item>
    </style>

</resources>